@model HalloDoc.Entities.ViewModels.AccountAccessViewModel;

<div class="mainContent2 mx-auto ">
    <div class="d-flex flex-column align-items-center justify-content-center ">


        <div class="PatientInfo d-flex justify-content-between align-items-center">
            <h3>Account Access</h3>
            <a asp-action="Dashboard" asp-controller="Admin" style=" right: 0px; text-decoration: none; ">
                <button class="back">
                    <i class="bi bi-chevron-left"></i>
                    back
                </button>
            </a>
        </div>

        <div class="p-5 shadow mb-3  rounded h-100 PatientInfo">
            <div class="row">

                <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-end">
                    <a class="btn btn-info" href="@Url.Action("CreateRole","Admin")">Create Access </a>
                </div>
            </div>
            <div class="row mt-2">
                <div class="table-responsive">
                    <table class="table ">
                        <thead class="table-secondary">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Account Type</th>
                                <th scope="col">Actions</th>

                            </tr>
                        </thead>
                        <tbody class="table-group-divider">


                            @foreach (var u in Model.roles)
                            {
                                <tr>
                                    <input type="hidden" asp-for="@u.RoleId">

                                    <td>@u.Name</td>
                                    <td>

                                        @if (u.AccountType == 1)
                                        {
                                            <p>Admin</p>
                                        }
                                        @if (u.AccountType == 2)
                                        {
                                            <p>Physician</p>
                                        }
                                        @if (u.AccountType == 3)
                                        {
                                            <p>Patient</p>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <a class="btn btn-outline-info mx-1 contactProviderc" asp-action="EditAccountAccess" asp-controller="Admin" asp-route-id="@u.RoleId">Edit</a>
                                            <a class="btn btn-outline-info mx-1" asp-action="deleteAccess" asp-controller="Admin" asp-route-id="@u.RoleId">Delete</a>

                                        </div>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>
</div>


