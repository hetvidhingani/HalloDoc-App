@model EmailLogViewModel;

<div class=" mx-5 " style="margin-top:120px;">
    <div class="d-flex flex-column align-items-center justify-content-center ">


        <div class="w-100 d-flex justify-content-between align-items-center ">
            <h3>Email Logs</h3>
            <a href="##" onClick="history.go(-1); return false;" style=" right: 0px; text-decoration: none; ">
                <button class="back">
                    <i class="bi bi-chevron-left"></i>
                    back
                </button>
            </a>
        </div>

        <div class="p-5 shadow mb-3  rounded h-100 w-100 ">
            <div class="row d-flex justify-content-between align-items-baseline">
                <div class="col-lg-3 col-md-3 col-sm-6 ">
                    <div class="form-group has-search mb-1">
                        <span class="fa fa-search form-control-feedback"></span>
                        <input type="text" class="form-control w-100" placeholder="Search" id="search-input">
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6">
                    <div class="has-search ">

                        <select id="professionType" class="form-select form-select-sm " style="height:40px" aria-label="Default select example" asp-for="RoleId">
                            <option value="0" selected>All</option>

                            @foreach (var type in Model.role)
                            {
                                <option value="@type.RoleId">@type.Name</option>
                            }
                        </select>
                        <label for=" ">Role</label>
                    </div>
                        <span asp-validation-for="RoleId" class="text-danger"></span>

                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 d-flex justify-content-end align-items-center">
                    <a class="btn btn-outline-info" href="@Url.Action("AddVendor","Admin") ">+ Add Business</a>
                </div>
            </div>
            <div class="row mt-2">
                <div id="admindata" class="mb-5"></div>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="contactProviderMODEL" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">

        <div class="modal-content">
        </div>
    </div>
</div>
