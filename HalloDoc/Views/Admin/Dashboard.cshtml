                        <div class="row">
                            <div class="col-12">
                                <i class="fa-solid fa-bell cardContaint"></i>
                                <strong class="cardContaint ">
                                    NEW
                                </strong>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <strong class="cardContaint font fs-3" id="newCountDisplay"></strong>

