                        <div class="check mt-1">
                            <button class="btn request-type-btn filterData  " id="0" data-requesttype="0" data-state="All"> <span style="margin-left:5px">All</span>   </button>
                            <button class="btn  request-type-btn filterData " id="1" data-requesttype="1"><span class="dot1 mx-auto"></span><span style="margin-left:5px">Patient</span></button>
                            <button class="btn  request-type-btn  filterData" id="2" data-requesttype="2"><span class="dot2 mx-auto "></span><span style="margin-left:5px">Family/Friend</span></button>
                            <button class="btn  request-type-btn filterData " id="3" data-requesttype="3"><span class="dot4  mx-auto"></span><span style="margin-left:5px">Concierge</span></button>
                            <button class="btn  request-type-btn  filterData " id="4" data-requesttype="4"><span class="dot3  mx-auto"></span><span style="margin-left:5px">Business</span></button>
                        </div>
                    </div>


                </div>
                @* table *@
                <div id="admindata"></div>
               
            </div>
        </div>
    </div>
    </div>
</main>
<script>
   
    // Function to handle form submission
   

    //cards design
    $(document).ready(function () {
        $(".cards").click(function () {
            $(".cards").removeClass("active");
            $(this).addClass("active");

        });
    });

    //partialview

    function loadTable(STATE) {
        state = STATE;
        document.getElementById('status').innerText = "( " + (state) + " )";

        page = 1;
        AjaxAll();

    }

    //paging
    var page;
    var url;
    var PatientName = "";
    var requestType;
    var regionId;
    var state;

    //patient search

    $("#search-input").on('input', function () {
        PatientName = $(this).val();

        page = 1;
        AjaxAll();
    });

    function AjaxAll() {

       
      
        $.ajax({
            url: '@Url.Action("GetTable", "Admin")',
            type: "POST",
            data: { state: state, CurrentPage: page, PatientName: PatientName, ReqType: requestType, RegionId: regionId },
            dataType: "html",
            success: function (data) {
              
                $("#admindata").html(data);
                localStorage.setItem("state", state);
            },
            error: function (error) {
                $("#admindata").html('An error has occurred');
            }
        });
    }
    //requesttype
    $(".filterData").click(function () {
        var activeCard = $('.cards.active');

        var activeCardId = activeCard.attr('id');
        state = activeCardId;
        requestType = $(this).attr('id');

        page = 1;

        AjaxAll();
    })
    //search region
    $("#allregionsearch").on("input", function () {
        var activeCard = $('.cards.active');

        var activeCardId = activeCard.attr('id');
        state = activeCardId;

        regionId = $(this).val();
        page = 1;
        AjaxAll();
    })
    //change page
    function changepage(CurrentPage) {
        page = CurrentPage;


        AjaxAll();
    }

    //back
    var state1 = localStorage.getItem("state");
    localStorage.removeItem("state");

    if (state1 == "New") {

        $("#New").click();
        $(".cards").removeClass("active");

        $("#New").addClass("active");
        state1 = "New";

    }

    else if (state1 == "Pending") {

        $("#Pending").click();

        $(".cards").removeClass("active");

        $("#Pending").addClass("active");
        state1 = "New";

    }
    else if (state1 == "Active") {

        $("#Active").click();

        $(".cards").removeClass("active");

        $("#Active").addClass("active");
        state1 = "New";

    }
    else if (state1 == "Conclude") {

        $("#Conclude").click();

        $(".cards").removeClass("active");

        $("#Conclude").addClass("active");
        state1 = "New";

    }
    else if (state1 == "Toclose") {

        $("#Toclose").click();

        $(".cards").removeClass("active");

        $("#Toclose").addClass("active");
        state1 = "New";

    }
    else if (state1 == "Unpaid") {

        $("#Unpaid").click();

        $(".cards").removeClass("active");

        $("#Unpaid").addClass("active");
        state1 = "New";

    }




    //responsive mobile view
    var coll = document.getElementsByClassName("collapsible");
    var i;

    for (i = 0; i < coll.length; i++) {
        coll[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.display === "none") {
                content.style.display = "block";
            } else {
                content.style.display = "none";
            }
        });
    }


    //display count
    document.getElementById("newCountDisplay").innerText = @Model.NewCount;
    document.getElementById("pendingCountDisplay").innerText = @Model.PendingCount;
    document.getElementById("ActiveCount").innerText = @Model.ActiveCount;
    document.getElementById("ConcludeCount").innerText = @Model.ConcludeCount;
    document.getElementById("ToCloseCount").innerText = @Model.ToCloseCount;
    document.getElementById("UnpaidCount").innerText = @Model.UnpaidCount;

    function ExportAll() {
        $.ajax({
            url: '/Admin/ExportAll',
            type: 'GET',
            data: {},
            success: function (data) {
                window.location.href = data;
            },
            error: function (xhr, status, error) {
                console.error("Error occurred: " + error);
            }
        });
    }
    function ExportDataWithFilter() {

        $.ajax({
            url: '/Admin/ExportFilterWise',
            type: 'POST',
            data: { state: state, PatientName: PatientName, ReqType: requestType, RegionId: regionId },
            success: function (data) {
                window.location.href = data;
            },
            error: function (xhr, status, error) {
                console.error("Error occurred: " + error);
            }
        });
    }
    function support() {
        $('#support').modal('show');
    }

    $('.sendLink').click(function () {
        
        $.ajax({
            type: "POST",
            dataType: "html",
          
            url: "@(Url.Action("sendLink", "Admin"))",
            success: function (data) {
               
                $("#sendLinkToPatient").find('.modal-content').html(data);
            }
        });
    });

    $('#supprtForm').on('submit', function (e) {

        var additionalNotes = $('#additionalNotes').val();
        if (additionalNotes == null || additionalNotes == "") {
            document.getElementsByClassName("validate")[0].innerText = "Please enter additional notes.";
            return;
        }
        e.preventDefault();
        var form = $(this);
        var url = form.attr('action');
        var data = form.serialize();

        $.ajax({
            type: "POST",
            url: url,
            data: data,
            success: function (data) {

                location.reload();
            }
        });
            
    });
</script>