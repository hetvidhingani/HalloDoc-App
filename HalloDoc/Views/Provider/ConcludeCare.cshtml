@model HalloDoc.Entities.ViewModels.DashboardViewModel;
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewBag.ProviderDashboard = "active";
    ViewData["Title"] = "View Uploads";

}
<div class="mainContent2 mx-auto ">
    <div class="d-flex flex-column align-items-center justify-content-center ">


        <div class="PatientInfo d-flex justify-content-between align-items-center">
            <h3>Documents</h3>
            <a asp-action="Dashboard" asp-controller="Provider" style=" right: 0px; text-decoration: none; ">
                <button class="back">
                    <i class="bi bi-chevron-left"></i>
                    back
                </button>
            </a>
        </div>

        <div class="p-5 shadow mb-3  rounded h-100 PatientInfo">
      

                <div class="row">

                    <h6>Patient Name:</h6>

                    <div class="col-12 fw-bold text-info fs-3">

                        @Model.Username
                      
                    </div>
                  
                </div>

            <form asp-action="ConcludeRequest" asp-controller="Provider" asp-route-id="@Model.RequstId" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="RequstId" id="reqID" />
                <div class="row ">
                    <div class="col-12 mt-3 d-flex align-items-center justify-content-between">
                        <h3>Encounter Forms</h3>
                        <button class="btn btn-outline-info"> Upload</button>
                    </div>
                   
                </div>

                <div class="dashboardtbl ">
                    <table class="table table-hover">

                        <thead style="background-color:#F0F0F0">
                            <tr>
                                <th>Document</th>
                                <th scope="col">Action</th>
                            </tr>

                        </thead>
                        @foreach (var r in Model.RequestWiseFiles)
                        {

                            <tbody>
                                <tr>
                                   
                                    <td>
                                        @r.FileName
                                    </td>
                                    <td>
                                        <a href="@Url.Action("DownloadFile", "Provider", new { fileId = @r.RequestWiseFileId })" class="btn btn-outline-info download-link" data-filename="@r.FileName">
                                            <i class="bi bi-cloud-arrow-down"></i>
                                        </a>
                                       
                                    </td>

                                </tr>

                            </tbody>
                        }
                    </table>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 mx-auto" >
                            <span class="fw-bold">Provider Note</span>
                            <br />
                            <div class="form-floating form-group ">
                                <textarea asp-for="note" class="form-control " name="note" id="textAreaExample2" style="height: 120px;" rows="8" placeholder=" "></textarea>
                                <label class="form-label" for="textAreaExample2">
                                    Provider Note

                                </label>

                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end"> 
                        <button class="btn btn-info text-white">Conclude Care</button>
                    </div>
                </div>

                <div class="mbltbl  mt-3  shadow mb-3  rounded h-100  " style="background-color:white">

                    @foreach (var r in Model.RequestWiseFiles)
                    {

                        <div class="mobileviewdashboard my-2 p-3" style="background-color:white">

                         
                            <div class="content mx-2">
                                <div class="provider d-flex gap-2">
                                    @r.FileName <span></span>
                                </div>
                              
                                <div class="provider d-flex pt-2 gap-2">
                                    <a href="@Url.Action("DownloadFile", "Provider", new { name = r.FileName })" class="btn btn-outline-info download-link">
                                        <i class="bi bi-cloud-arrow-down"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <hr />

                    }

                </div>


            </form>

        </div>
    </div>
</div>

<script>


    //to collapse table
    var coll = document.getElementsByClassName("collapsible");
    var i;

    for (i = 0; i < coll.length; i++) {
        coll[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.display === "none") {
                content.style.display = "block";
            } else {
                content.style.display = "none";
            }
        });
    }

    // For Download File

    function toggle(source) {
        checkboxes = document.getElementsByClassName('checkboxForAll');
        for (var i = 0, n = checkboxes.length; i < n; i++) {
            checkboxes[i].checked = source.checked;
        }
    }
</script>
