@model HalloDoc.Entities.ViewModels.PatientRecordViewModel
<div class="table-responsive">
    <table class="table ">
        <thead class="table-secondary">
            <tr>
                <th scope="col">Client / Member</th>
                <th scope="col">Created Date </th>
                <th scope="col">Confirmation</th>
                <th scope="col">Provider Name</th>
                <th scope="col">Concluded Date</th>
                <th scope="col">Status </th>
                <th scope="col">Final Report</th>
                <th scope="col">Actions</th>


            </tr>
        </thead>
        <tbody class="table-group-divider">

            @foreach (var data in Model.PagingData)
            {
                <tr>
                    <input type="hidden" asp-for="@data.RequestId">
                    <td>

                        @data.clientName
                    </td>
                    <td>
                        @data.CreatedDate
                    </td>
                    <td>
                        @data.confirmationNumber
                    </td>
                    <td>
                        @if (@data.ProviderName != null)
                        {
                            @data.ProviderName
                        }
                        else
                        {
                            <p>-</p>
                        }
                    </td>
                    <td>
                        @if (@data.ConcludedDate != null)
                        {
                            @data.ConcludedDate
                        }
                        else
                        {
                            <p>-</p>
                        }
                       
                    </td>
                    <td>@data.status</td>
                    <td>-</td>

                    <td>
                        <div class="dropdown " id="4 ">
                            <button class="btn btn-outline-info py-2" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Action
                            </button>

                            <ul class="dropdown-menu layoutTab">
                                <li><a class="px-3 py-4 fw-bold" style="color:dimgrey;text-decoration:none;" asp-route-id="@data.requestclientID">View Case</a></li>
                                <li><a class="px-3 py-4 fw-bold" style="color:dimgrey;text-decoration:none;" href="#">Chat</a></li>
                                <li><a class="px-3 py-4 fw-bold" style="color:dimgrey;text-decoration:none;" href="#">0 Document</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }


        </tbody>
    </table>
    <partial name="_Paging.cshtml" />

</div>
