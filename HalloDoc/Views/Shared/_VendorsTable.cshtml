@model HalloDoc.Entities.ViewModels.VendorsViewModel
<div class="table-responsive">
    <table class="table ">
        <thead class="table-secondary">
            <tr>
                <th scope="col">Profession</th>
                <th scope="col">Business Name</th>
                <th scope="col">Email</th>
                <th scope="col">Fax Number</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Business Contact</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody class="table-group-divider">


            @foreach (var u in Model.vendor)
            {
                <tr>
                    <input type="hidden" asp-for="@u.VendorId">
                    <td>
                       
                        @foreach (var type in Model.ProfessionType)
                        {
                            if (type.HealthProfessionalId == u.Profession)
                            {
                                <p>@type.ProfessionName</p>
                            }
                            
                        }
                    </td>
                    <td>@u.VendorName  </td>
                    <td>
                       @u.Email
                    </td>
                    <td>@u.FaxNumber</td>
                    <td>
                        @u.PhoneNumber
                    </td>
                    <td>
                        @u.BusinessContact
                    </td>
                    <td>
                        <div class="d-flex">
                           
                            <a class="btn btn-outline-info mx-1" asp-action="EditVendor" asp-controller="Admin" asp-route-id="@u.VendorId">Edit</a>
                            <a class="btn btn-outline-info mx-1" asp-action="EditProvider" asp-controller="Admin" asp-route-id="@u.VendorId">Delete</a>


                        </div>
                    </td>

                </tr>
            }

        </tbody>
    </table>
   
</div>
