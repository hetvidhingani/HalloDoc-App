@{
    Layout = "~/Views/Shared/_RegisterdPatientLoginLayout.cshtml";
}


<div class="login">
    <h3 class="mainHeading">
      Reset Your Password
    </h3>
</div>

<div class=" form-floating form-group">
    <i class="bi bi-person-circle "></i>
    <input type="name" class="form-control form-control-lg" placeholder=" " />
    <label for="text">Username</label>
</div>


<div class="input-group d-flex justify-content-between">

    <button class="btn btn-primary w-100  px-4">Reset Password</button>

</div>
<div class="forgot ">
    <small><a asp-controller="Patient" asp-action="RegisterdPatientLogin" class="forgot">Back To Login</a></small>
</div>

