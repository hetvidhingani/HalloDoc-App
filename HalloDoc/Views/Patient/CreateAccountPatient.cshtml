@model HalloDoc.Entities.ViewModels.CreateAccountViewModel;
@{
    Layout = "~/Views/Shared/_RegisterdPatientLoginLayout.cshtml";
}
@{
    if (ViewBag.Message != null)
    {
        <p class="text-danger text-center fs-3">@ViewBag.Message</p>
    }
    
}
<div class="backkButton">

    <a asp-controller="Patient" asp-action="PatientSite" class="SiteColor">
        <i class="bi bi-chevron-left SiteColor"></i>
        Back
    </a>

</div>
<div class="text-center ">


    <div class="login">
        @TempData["errormsg1"]
        @TempData["errormsg"]
        <h3 class="mainHeading">
            Create Account
        </h3>
    </div>

    <form asp-controller="Patient" asp-action="CreateAccountRequest" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @* <input type="hidden" id="requestID" value="@TempData["id"]" asp-for="RequestID"/> *@
        <div class=" form-floating form-group">
            <i class="bi bi-person-circle loginIconfrom"></i>
            <input asp-for="Email" type="text" id="email" class="form-control " placeholder=" " />
            <label for="email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>


        <div class=" form-floating form-group">
            <i class="bi bi-eye loginIconfrom"></i>
            <input asp-for="PasswordHash" type="password" class="form-control  " id="pwd" placeholder=" ">
            <label for="pwd">Password</label>
            <span asp-validation-for="PasswordHash" class="text-danger"></span>

        </div>
        <div class=" form-floating form-group">
            <i class="bi bi-eye loginIconfrom"></i>
            <input asp-for="ConfirmPassword" type="password" class="form-control  " id="pwd" placeholder=" ">
            <label for="pwd">Confirm Password</label>
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="input-group d-flex justify-content-between">
            <input type="submit" class="SiteButton  px-4 py-2 w-100 " style="text-decoration:none;color:white;border:none" value="Create" />
        </div>
    </form>


</div>