@model HalloDoc.Entities.DataModels.AspNetUser
@{
    Layout = "~/Views/Shared/_RegisterdPatientLoginLayout.cshtml";
}
@{
    if (ViewBag.Message != null)
    {
    <p class="text-danger text-center fs-3">@ViewBag.Message</p>
    }
    
}
<div class="backkButton">

    <a asp-controller="Custom" asp-action="PatientSite" class="SiteColor">
        <i class="bi bi-chevron-left SiteColor"></i>
        Back
    </a>

</div>
<div class="text-center ">


    <div class="login">
        <h3 class="mainHeading">
            Login into your account
        </h3>
    </div>

    <form asp-controller="Custom" asp-action="RegisterdPatientLogin" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class=" form-floating form-group">
            <i class="bi bi-person-circle loginIconfrom"></i>
            <input asp-for="Email" type="text" id="email" class="form-control " placeholder=" " />
            <label for="email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>


        <div class=" form-floating form-group">
            <i class="bi bi-eye loginIconfrom" id="disp" onclick="myFunction()"></i>

            <input asp-for="PasswordHash" type="password" class="form-control  " id="pwd" placeholder=" " >
            <label for="pwd">Password</label>
            <span asp-validation-for="PasswordHash" class="text-danger"></span>

           

        </div>
        <div class="input-group d-flex justify-content-between">
                <input type="submit" class="SiteButton  px-4 py-2 w-100 " style="text-decoration:none;color:white;border:none" value="Login"/>
        </div>
   </form>
    <div class="forgot ">
        <small><a asp-controller="Custom" asp-action="ResetPassword" class="forgot SiteColor">Forgot Password?</a></small>
    </div>

</div>
<script>
    function myFunction() {
        var x = document.getElementById("pwd");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>